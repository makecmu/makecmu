<div class="project">
  <div class="project-container">
    <%= link_to project, :class => "modal" do %>
      <%= image_tag project.image.url, :alt => project.title, :class => "project-img" %>
    <% end %>
    <h4>Looking For:</h4>
    <ul>
      <% project.looking_for.each do |need| %>
      <li><%= need %></li>
      <% end %>
    </ul>
    <a href="" class="inset-button join-button">Join this project</a>
  </div>

  <h3><%= link_to project.title, project, :class => "modal" %></h3>
  <h5><%= project.author %></h5>
  <div class="project-description"><%= project.description %></div>  
</div>