<%= form_for([@project, @membership]) do |f| %>
  <% if @membership.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @membership.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name, "Your name" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :interests %><br />
    <%= f.text_field :interests %>
  </div>
  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_area :comments, :rows => 5, :cols => 35 %>
  </div>
  <div class="actions">
    <%= f.submit "Join #{@project.title}" %>
  </div>
<% end %>
