<h1>Listing memberships</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Interests</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @memberships.each do |membership| %>
  <tr>
    <td><%= membership.name %></td>
    <td><%= membership.email %></td>
    <td><%= membership.interests %></td>
    <td><%= membership.comments %></td>
    <td><%= link_to 'Show', project_membership_path(@project, membership) %></td>
    <td><%= link_to 'Edit', edit_project_membership_path(@project, membership) %></td>
    <td><%= link_to 'Destroy', project_membership_path(@project, membership), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

